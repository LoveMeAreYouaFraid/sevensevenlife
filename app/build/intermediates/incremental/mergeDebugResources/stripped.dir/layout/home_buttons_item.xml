<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@drawable/bg_click_gray"
        android:orientation="vertical"
        android:visibility="invisible" android:tag="layout/home_buttons_item_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/title_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_weight="1"
            android:src="@drawable/ic_circular_red" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="center"
            android:textColor="#4A5A57"
            android:textSize="@dimen/sp_12"
            android:visibility="visible" />
    </LinearLayout>
         