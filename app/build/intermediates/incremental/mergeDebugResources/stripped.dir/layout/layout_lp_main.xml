<?xml version="1.0" encoding="utf-8"?>
        

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/layout_lp_main_0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/real_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />


                <com.sevensevenlife.view.custumview.TabFragmentHost
                    android:id="@+id/tab_host"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:id="@+id/sys_bt"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/dp_4"
                android:src="@drawable/bg_home_sys" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/left_layout"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/hui"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@mipmap/user_bg_life_layout"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp">


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/user_head_img"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:minHeight="60dp"
                        android:minWidth="60dp" />

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_8"
                        android:textColor="@color/white" />
                </LinearLayout>


            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/periphery"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/periphery"
                        android:drawablePadding="16dp"
                        android:foreground="@drawable/bg_click_gray"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="周边站点"
                        android:textColor="@color/left_layout_txt" />


                    <TextView
                        android:id="@+id/riding_information"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/riding_information"
                        android:drawablePadding="16dp"
                        android:foreground="@drawable/bg_click_gray"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="骑行信息"
                        android:textColor="@color/left_layout_txt" />


                    <TextView
                        android:id="@+id/balance"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/balance"
                        android:drawablePadding="16dp"
                        android:foreground="@drawable/bg_click_gray"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="租车卡余额"
                        android:textColor="@color/left_layout_txt" />

                    <TextView
                        android:id="@+id/user_home"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="@dimen/dp_8"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/user_home"
                        android:drawablePadding="16dp"
                        android:foreground="@drawable/bg_click_gray"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="@string/wodexiaoqu"
                        android:textColor="@color/left_layout_txt" />

                    <TextView
                        android:id="@+id/user_invitation"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/user_invitation"
                        android:drawablePadding="16dp"
                        android:foreground="@drawable/bg_click_gray"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="@string/youli"
                        android:textColor="@color/left_layout_txt" />

                    <TextView
                        android:id="@+id/user_msg"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/user_msg"
                        android:drawablePadding="16dp"
                        android:foreground="@drawable/bg_click_gray"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="@string/xiaoxizhongxin"
                        android:textColor="@color/left_layout_txt" />


                    <TextView
                        android:id="@+id/user_opinion"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="@dimen/dp_8"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/user_opinion"
                        android:drawablePadding="16dp"
                        android:foreground="@drawable/bg_click_gray"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="@string/yijian"
                        android:textColor="@color/left_layout_txt" />

                    <TextView
                        android:id="@+id/user_settled"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/user_settled"
                        android:drawablePadding="16dp"
                        android:foreground="@drawable/bg_click_gray"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="@string/ruzhu"
                        android:textColor="@color/left_layout_txt" />


                    <TextView
                        android:id="@+id/user_discount"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/user_discount"
                        android:drawablePadding="16dp"
                        android:foreground="@drawable/bg_click_gray"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="优惠券"
                        android:textColor="@color/left_layout_txt" />


                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_setup"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_44"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/ic_settings_hui"
                    android:drawablePadding="8dp"
                    android:foreground="@drawable/bg_click_gray"
                    android:gravity="center|right"
                    android:paddingLeft="16dp"
                    android:paddingRight="@dimen/dp_16"
                    android:text="@string/shezhi"
                    android:textColor="@color/left_layout_txt" />

                <TextView
                    android:id="@+id/user_out"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/user_out"
                    android:drawablePadding="8dp"
                    android:foreground="@drawable/bg_click_gray"
                    android:gravity="center|right"
                    android:paddingLeft="16dp"
                    android:paddingRight="@dimen/dp_16"
                    android:text="退出"
                    android:textColor="@color/left_layout_txt" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
         