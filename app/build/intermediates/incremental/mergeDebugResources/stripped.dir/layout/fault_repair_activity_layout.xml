<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" android:tag="layout/fault_repair_activity_layout_0" xmlns:android="http://schemas.android.com/apk/res/android">


        <include
            android:id="@+id/title"
            layout="@layout/app_title" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="故障类型"
                    android:textColor="@color/color_47_47_47"
                    android:textSize="@dimen/sp_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_30"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/vehicle"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginRight="@dimen/dp_14"
                        android:background="@drawable/bg_red_fillet"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="车辆故障"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/car_pile"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginRight="@dimen/dp_14"
                        android:background="@drawable/bt_gray_fillet"
                        android:gravity="center"
                        android:text="车桩故障"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/station"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_40"
                        android:background="@drawable/bt_gray_fillet"
                        android:gravity="center"
                        android:text="车站故障"
                        android:textColor="@color/white" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:background="@color/white"
                    android:text="故障描述"
                    android:textColor="@color/color_47_47_47"
                    android:textSize="@dimen/sp_16" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gray"
                    android:gravity="top"
                    android:hint="请描述故障，如龙头松动，刹车失灵，座包松动，车桩无法借车或还车，车站断电等等"
                    android:maxLength="300"
                    android:minHeight="@dimen/dp_100"
                    android:padding="@dimen/dp_8"
                    android:textColorHint="@color/gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_40"
                    android:background="@color/white"
                    android:text="故障照片"
                    android:textColor="@color/color_47_47_47"
                    android:textSize="@dimen/sp_16" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="下图为样张"
                    android:textColor="@color/color_47_47_47" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/testone" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:src="@drawable/testtwo" />
                </LinearLayout>


            </LinearLayout>

        </ScrollView>
    </LinearLayout>

         