<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/community_authentication_activity_layout_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <include
            android:id="@+id/title"
            layout="@layout/app_title" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/auth_name"
                    style="@style/CommunityEditTextStyle"
                    android:drawableLeft="@drawable/cmt_auth_name"
                    android:hint="@string/community_authentication_name" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/bt_bg_gray" />

                <EditText
                    android:id="@+id/auth_identify"
                    style="@style/CommunityEditTextStyle"
                    android:drawableLeft="@drawable/cmt_auth_identify"
                    android:hint="@string/community_authentication_identify"
                    android:maxLength="21"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/bt_bg_gray" />

                <EditText
                    android:id="@+id/auth_phone"
                    style="@style/CommunityEditTextStyle"
                    android:drawableLeft="@drawable/cmt_auth_phone"
                    android:hint="@string/community_authentication_phone"
                    android:maxLength="13"
                    android:inputType="phone"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/bt_bg_gray" />

                <EditText
                    android:id="@+id/auth_build"
                    style="@style/CommunityEditTextStyle"
                    android:drawableLeft="@drawable/cmt_auth_build"
                    android:hint="@string/community_authentication_build" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/bt_bg_gray" />

                <EditText
                    android:id="@+id/auth_unit"
                    style="@style/CommunityEditTextStyle"
                    android:drawableLeft="@drawable/cmt_auth_unit"
                    android:hint="@string/community_authentication_unit" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/bt_bg_gray" />

                <EditText
                    android:id="@+id/auth_house"
                    style="@style/CommunityEditTextStyle"
                    android:drawableLeft="@drawable/cmt_auth_house"
                    android:hint="@string/community_authentication_house" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/hui" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:textColor="@color/community_notice_content"
                    android:text="@string/community_authentication_upload" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/cmt_auth_img" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
         