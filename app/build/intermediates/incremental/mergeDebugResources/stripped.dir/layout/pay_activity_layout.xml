<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/pay_activity_layout_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/hui"
            android:orientation="vertical" android:tag="binding_1">

            <include
                android:id="@+id/title"
                layout="@layout/app_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/hui"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp_16"
                android:text="支付方式"
                android:textColor="@color/color_717171" />

            <LinearLayout
                android:id="@+id/layout_wx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/dp_16">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="@dimen/dp_50"
                    android:src="@mipmap/weixin" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lineSpacingExtra="@dimen/dp_8"
                        android:paddingLeft="@dimen/dp_16"
                        android:text="微信"
                        android:textColor="@color/color_717171"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:lineSpacingExtra="@dimen/dp_8"
                        android:paddingLeft="@dimen/dp_16"
                        android:text="微信账户支付"
                        android:textColor="@color/c0c0c0" />
                </LinearLayout>


                <CheckBox
                    android:id="@+id/ck_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:button="@drawable/bg_ck_genn_box"
                    android:checked="true"
                    android:clickable="false" />
            </LinearLayout>

            <include layout="@layout/line_w" />

            <LinearLayout
                android:id="@+id/layout_zfb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/dp_16">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="@dimen/dp_50"
                    android:src="@mipmap/zhifubao" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lineSpacingExtra="@dimen/dp_8"
                        android:paddingLeft="@dimen/dp_16"
                        android:text="支付宝"
                        android:textColor="@color/color_717171"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lineSpacingExtra="@dimen/dp_8"
                        android:paddingLeft="@dimen/dp_16"
                        android:text="支付宝账户支付"
                        android:textColor="@color/c0c0c0" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/ck_zfb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:button="@drawable/bg_ck_genn_box"
                    android:clickable="false"
                    android:lineSpacingExtra="@dimen/dp_8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible" android:tag="binding_2">

                <TextView
                    android:id="@+id/tv_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@color/hui"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp_16"
                    android:text="选择优惠卷"
                    android:textColor="@color/color_717171"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/coupon_layout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_4"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_4"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_coupon_num"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_16"
                        android:gravity="center"
                        android:textColor="@color/color_717171"
                        android:textSize="@dimen/sp_16" />


                    <TextView
                        android:id="@+id/tv_coupon_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:lineSpacingExtra="@dimen/dp_8"
                        android:textColor="@color/color_717171"
                        android:textSize="@dimen/sp_16" />


                </LinearLayout>

                <include layout="@layout/line_w" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_16">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:lineSpacingExtra="@dimen/dp_8"
                            android:text="应付金额"
                            android:textColor="@color/color_717171"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:lineSpacingExtra="@dimen/dp_8"
                            android:text="实付金额"
                            android:textColor="@color/color_717171"
                            android:textSize="16sp"
                            android:visibility="gone" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/pay_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right|top"
                        android:lineSpacingExtra="@dimen/dp_8"
                        android:text="应付金额\n实付金额"
                        android:textColor="@color/style_color"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/bt_pay"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_80"
                android:background="@drawable/bg_green_fillet"
                android:gravity="center"
                android:text="确认支付"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
         