<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"><!-- #F0F0F0 -->

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/alert_confirm"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/dp_20"
            android:text="点击下单或预约，立享优惠，更有保障。您确定坚持拨打电话？" />

        <Button
            android:id="@+id/alert_confirm2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingBottom="25dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="15dip"
            android:textColor="#000000"
            android:textSize="16dp"
            android:visibility="gone" />
    </LinearLayout>

    <include layout="@layout/line_w" />

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:orientation="horizontal"><!-- #F0F0F0-->
        <!--  android:onClick="submitThis" -->
        <Button
            android:id="@+id/submitThis"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_click_gray"
            android:gravity="center"
            android:text="是"
            android:textSize="14dp" />

        <include layout="@layout/line_h" />

        <!--  android:onClick="cancalThis" -->
        <Button
            android:id="@+id/cancalThis"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_click_gray"
            android:gravity="center"
            android:text="否"
            android:textSize="14dp" />
    </LinearLayout>
</LinearLayout>
