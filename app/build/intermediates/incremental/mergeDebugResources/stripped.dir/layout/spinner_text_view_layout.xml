<?xml version="1.0" encoding="utf-8"?>

                                                                   

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/white" android:tag="layout/spinner_text_view_layout_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/spinner_txt"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:gravity="right"
            android:minWidth="@dimen/dp_80" />

        <View
            android:id="@+id/view"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/spinner_txt"
            android:layout_toRightOf="@+id/spinner_txt"
            android:background="@drawable/ic_up_black" />


    </RelativeLayout>
         