<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/home_business_activity_layout_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <include
            android:id="@+id/title"
            layout="@layout/app_title" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" android:tag="binding_1">

                <TextView
                    android:id="@+id/home_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@color/hui"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/dp_16"
                    android:text="" />

                <TextView
                    android:id="@+id/home_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_click_gray"
                    android:drawableRight="@drawable/ic_chevron_black"
                    android:gravity="center|left"
                    android:lineSpacingExtra="6dp"
                    android:padding="@dimen/dp_16"
                    android:text="小区公告" />

                <include layout="@layout/line_w" />

                <TextView
                    android:id="@+id/home_vote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_click_gray"
                    android:drawableRight="@drawable/ic_chevron_black"
                    android:gravity="center|left"
                    android:lineSpacingExtra="6dp"
                    android:padding="@dimen/dp_16"
                    android:text="业主投票" />

                <include layout="@layout/line_w" />

                <TextView
                    android:id="@+id/home_repair"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_click_gray"
                    android:drawableRight="@drawable/ic_chevron_black"
                    android:gravity="center|left"
                    android:lineSpacingExtra="6dp"
                    android:padding="@dimen/dp_16"
                    android:text="物业报修" />

                <include layout="@layout/line_w" />

                <TextView
                    android:id="@+id/home_staff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_click_gray"
                    android:drawableRight="@drawable/ic_chevron_black"
                    android:gravity="center|left"
                    android:lineSpacingExtra="6dp"
                    android:padding="@dimen/dp_16"
                    android:text="小区保安" />

                <include layout="@layout/line_w" />

                <TextView
                    android:id="@+id/home_opinion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_click_gray"
                    android:drawableRight="@drawable/ic_chevron_black"
                    android:gravity="center|left"
                    android:lineSpacingExtra="6dp"
                    android:padding="@dimen/dp_16"
                    android:text="意见箱" />

                <include layout="@layout/line_w" />

                <TextView
                    android:id="@+id/home_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_click_gray"
                    android:drawableRight="@drawable/ic_chevron_black"
                    android:gravity="center|left"
                    android:lineSpacingExtra="6dp"
                    android:padding="@dimen/dp_16"
                    android:text="发帖" />

                <include layout="@layout/line_w" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
         