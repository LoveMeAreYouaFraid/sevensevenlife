<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/post_activity_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/style_color"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_b"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:foreground="@drawable/bg_click_gray"
                android:padding="@dimen/dp_8"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back_white" />

            <com.sevensevenlife.view.custumview.ViewPagerTabLayout
                android:id="@+id/view_pager_tab_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:id="@+id/right_button"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_click_gray"
                android:gravity="center"
                android:padding="@dimen/dp_8"
                android:text=""
                android:textColor="@color/white" />
        </LinearLayout>

        <com.sevensevenlife.view.custumview.NoScrollViewPager
            android:id="@+id/lp_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
         