<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:tag="layout/other_community_list_item_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50.5dp"
            android:background="@color/hui"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16">

            <TextView
                android:id="@+id/home_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textColor="@color/color_717171" />

            <LinearLayout
                android:id="@+id/home_add"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_red_three_fillet"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="添加"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_dark_grey_fillet"
                    android:padding="@dimen/dp_4"
                    android:src="@mipmap/house" />
            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/line_w_white" />
    </LinearLayout>
         