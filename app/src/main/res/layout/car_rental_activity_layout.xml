<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/title"
            layout="@layout/app_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16">

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/money_car_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_green_fillet"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="@dimen/dp_20">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/zcfs_bk" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="绑卡租车"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_20" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="left"
                        android:lineSpacingExtra="@dimen/dp_10"
                        android:text="绑定租车卡租车，前两小时免费，超时部分按1元/小时收费，不足一小时按一小时计算"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12" />


                    <RadioButton
                        android:id="@+id/money_car_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@drawable/bg_ck_box"
                        android:text="  默认方式" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_car_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                android:background="@drawable/bg_red_fillet"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="@dimen/dp_20">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/zcfs_yj" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="押金租车"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_20" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="left"
                        android:lineSpacingExtra="@dimen/dp_10"
                        android:text="在线预交300元租车，前两小时免费，超时部分按1元/小时收费，不足一小时按一小时计算"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12" />


                    <RadioButton
                        android:id="@+id/card_car_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:button="@null"
                        android:checked="false"
                        android:drawableLeft="@drawable/bg_ck_box"
                        android:text="  默认方式" />


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>
</layout>