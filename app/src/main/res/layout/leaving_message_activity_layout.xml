<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/hui"
            android:orientation="vertical">

            <include
                android:id="@+id/title"
                layout="@layout/app_title" />

            <EditText
                android:id="@+id/ed_title"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@color/white"
                android:hint="请输入标题"
                android:paddingLeft="@dimen/dp_16" />

            <EditText
                android:id="@+id/ed_content"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@color/white"
                android:gravity="left|top"
                android:hint="请输入发帖内容"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_44"
                android:paddingLeft="@dimen/dp_16">

                <ImageView
                    android:id="@+id/up_img_one"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:src="@drawable/bg_up_img_butt" />

                <ImageView
                    android:id="@+id/up_img_two"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:src="@drawable/bg_up_img_butt" />
            </LinearLayout>

            <TextView
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@drawable/bg_green_4dp_fillet"
                android:foreground="@drawable/bg_click_gray"
                android:gravity="center"
                android:text="发表此帖"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</layout>