<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/style_color"
            android:gravity="center"
            android:text="发现"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />

        <ScrollView
            android:id="@+id/faxian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/dp_16">

                <TextView
                    android:id="@+id/lock_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发现新大陆"
                    android:textColor="#717171"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discovery of the new continent"
                    android:textColor="#717171"
                    android:textSize="@dimen/sp_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="@dimen/dp_16"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/one"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_weight="1"
                        android:background="#9BC9FF"
                        android:foreground="@drawable/bg_click_gray"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/friend" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:drawableTop="@mipmap/pyquan"
                            android:gravity="center"
                            android:paddingTop="@dimen/dp_16"
                            android:text=" 熟人圈 "
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/two"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_weight="1"
                        android:background="#FF9580"
                        android:clickable="true"
                        android:foreground="@drawable/bg_click_gray"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/lnvitation" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:drawableTop="@mipmap/yqyoujiang"
                            android:gravity="center"
                            android:paddingTop="@dimen/dp_16"
                            android:text="邀请有礼"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/three"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="#D99BF6"
                        android:clickable="true"
                        android:foreground="@drawable/bg_click_gray"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/travel" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:drawableTop="@mipmap/lschuxing"
                            android:gravity="center"
                            android:paddingTop="@dimen/dp_16"
                            android:text="绿色出行"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:id="@+id/leaving_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@drawable/bg_red_msg_fillet"
                    android:drawableRight="@mipmap/liuyanban"
                    android:foreground="@drawable/bg_click_gray"
                    android:gravity="center|left"
                    android:paddingBottom="@dimen/dp_8"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_8"
                    android:text="市民留言"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/comprehensive_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="综合"
                    android:textColor="#717171"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:text="Comprehensive"
                    android:textColor="#717171"
                    android:textSize="@dimen/sp_16" />

                <include
                    android:id="@+id/list"
                    layout="@layout/list_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
