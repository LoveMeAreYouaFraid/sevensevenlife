<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/title"
            layout="@layout/app_title" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.sevensevenlife.view.custumview.AutoAdjustHeightImageView
                    android:id="@+id/header_img"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:visibility="gone"
                    app:aspectRatio="2.5" />

                <TextView
                    android:id="@+id/header_title"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="#ccffffff"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp_16"
                    android:textColor="@color/black" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/hui"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_8">


                    <LinearLayout
                        android:id="@+id/screen_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:background="@color/hui"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <RelativeLayout
                            android:layout_width="80dp"
                            android:layout_height="36dp"
                            android:layout_marginRight="@dimen/dp_16"
                            android:layout_weight="1"
                            android:background="@drawable/bg_white_yuan">

                            <TextView
                                android:id="@+id/sort"
                                android:layout_width="match_parent"
                                android:layout_height="36dp"
                                android:gravity="center|left"
                                android:paddingLeft="@dimen/dp_20"
                                android:text="排序"
                                android:textColor="@color/color_47_47_47" />

                            <View
                                android:layout_width="30dp"
                                android:layout_height="36dp"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/jtanniu" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/work_layout"
                            android:layout_width="80dp"
                            android:layout_height="36dp"
                            android:layout_marginRight="@dimen/dp_16"
                            android:layout_weight="1"
                            android:background="@drawable/bg_white_yuan"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/work"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="代买"
                                android:textColor="@color/color_47_47_47" />

                            <View
                                android:layout_width="30dp"
                                android:layout_height="36dp"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/jtanniu" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="80dp"
                            android:layout_height="36dp"
                            android:layout_marginRight="@dimen/dp_16"
                            android:layout_weight="1"
                            android:background="@drawable/bg_white_yuan">

                            <TextView
                                android:id="@+id/screen"
                                android:layout_width="match_parent"
                                android:layout_height="36dp"
                                android:gravity="center|left"
                                android:paddingLeft="@dimen/dp_20"
                                android:text="筛选"
                                android:textColor="@color/color_47_47_47" />

                            <View
                                android:layout_width="30dp"
                                android:layout_height="36dp"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/jtanniu" />
                        </RelativeLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/lab_layout_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_8"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/lable_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/xbiao"
                                android:gravity="center"
                                android:paddingLeft="@dimen/dp_30"
                                android:text="随叫随到"
                                android:textColor="@color/style_color" />

                            <TextView
                                android:id="@+id/lable_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/xbiao"
                                android:gravity="center"
                                android:paddingLeft="@dimen/dp_30"
                                android:text="专享快捷"
                                android:textColor="@color/style_color" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lab_layout_two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_16"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/lable_three"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/xbiao"
                                android:gravity="center"
                                android:paddingLeft="@dimen/dp_30"
                                android:text="多店购买"
                                android:textColor="@color/style_color" />

                            <TextView
                                android:id="@+id/lable_four"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/xbiao"
                                android:gravity="center"
                                android:paddingLeft="@dimen/dp_30"
                                android:text="省时省心"
                                android:textColor="@color/style_color" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/lock_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_white_red_fillet"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_16"
                            android:paddingRight="@dimen/dp_16"
                            android:text="查询详情" />

                    </LinearLayout>

                </LinearLayout>

                <include
                    android:id="@+id/list"
                    layout="@layout/list_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>