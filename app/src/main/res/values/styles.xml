<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme" type="text/css"><!-- Customize your theme here. --></style>
    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.NoActionBar" type="text/css">
        <item name="android:windowAnimationStyle">@android:style/Animation.Activity</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/style_color</item>
        <item name="android:editTextColor">@color/txt_black</item>
        <item name="android:colorBackgroundCacheHint">@color/txt_black</item>
        <item name="android:textColorHint">#aa818282</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSwitchThumbNormal">@color/style_color</item>
        <item name="android:colorForeground">@color/gray</item>
        <item name="vpiCirclePageIndicatorStyle">@style/AppTheme</item>
        <item name="colorPrimaryDark">@color/style_color</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SwitchCompatStyle" parent="Theme.AppCompat.Light">
        <!--开启时的颜色-->
        <item name="colorControlActivated">@color/app_blue</item>
        <!--关闭时的颜色-->
        <item name="colorSwitchThumbNormal">@color/hui</item>
        <!--关闭时的轨迹颜色-->
        <item name="android:colorForeground">@color/gray</item>
    </style>

    <style name="menu_two_style_layout_buttom">
        <item name="android:layout_marginBottom">5dip</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@drawable/bg_white_fillet</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.2</item>
    </style>

    <style name="GuideDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.1</item>
    </style>

    <style name="transparent_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@drawable/drawable_transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>

    </style>


    <style name="menu_two_style">
        <item name="android:layout_width">30dip</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="menu_two_style2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#8E8E8E</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="industy_top_menu_image">
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_marginBottom">5dip</item>
        <item name="android:layout_width">50dip</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="industy_top_menu_layout">
        <item name="android:layout_marginTop">3dip</item>
        <item name="android:layout_marginBottom">3dip</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="industry_top_menu_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_marginTop">1dip</item>
        <item name="android:layout_marginBottom">3dip</item>
    </style>
    <!--  <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item> -->


    <!-- F89959 -->
    <style name="myinfo_item_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:textColor">#8E8E8E</item>
        <item name="android:textSize">12dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
    </style>


    <style name="radio_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">28dip</item>
        <item name="android:textColor">@color/tab_color</item>
        <item name="android:textSize">12dp</item>
        <item name="android:drawableBottom">@drawable/tab</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:tag">0</item>

    </style>

    <style name="list_style01">
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:listSelector">@drawable/button_item_bg</item>
        <item name="android:background">#ffffff</item>
    </style>

    <!-- <style name="PopupWindowAnimation">
         <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
         <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
     </style>-->


    <style name="FullHeightDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- <item name="android:background">#FFF</item> -->
        <item name="android:windowBackground">@drawable/touming</item>
    </style>


    <!-- 自定义评分控件 -->
    <style name="RatingBar" parent="@android:style/Widget.Holo.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/rating_bar_self_big</item>
        <item name="android:maxHeight">96px</item>
        <item name="android:minHeight">96px</item>
    </style>


    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CommunityEditTextStyle">
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
